<style>
  :root {
    --blue: #225378;
    --white: #ffffff;
    --lightblue: rgba(67, 95, 118, 0.512);
  }
  body {
    font-family: 'Coda', cursive;
  }
  .bi {
    color: var(--blue);
  }
  .eye>i:hover{
    color: var(--white) !important;
  }
  .customborder {
    border-radius: 2%;
    border: 2px solid var(--blue);
  }
  td{
    min-height:60px;
  }
  .card {
      border: none;
      border-radius: 25px;
  }
  .footer{
    background-color: var(--lightblue);
    width: 100%;
    min-height: 250px;
  }
  .btn-signup{
    background-color: var(--blue);
    color: var(--white);
    padding: 10px 35px 10px 35px;
  }
  .btn-signup:hover{
    color: var(--white) !important;
  }
  .btn-create{
    /* padding: 10px 30px 10px 30px; */
    border: 2px solid var(--blue);
    border-radius: 4px;
  }
  .btn-create:hover{
    background-color: var(--blue);
    color: var(--white);
  }
  .headertext{
    min-height: 250px;
    align-items: left;
  }
  .headertext>h2{
    margin-top: 130px;
  }
  @media only screen and (max-width: 576px){
    .headertext>h2{
       margin-top: 30px;
    }
    .headertext{
      text-align: center;
    }
    .short{
      max-width: 50vw;
      overflow-wrap: break-word;
    }
  }
  .headertext>p{
    margin-top: 30px;
    font-size: 18px;
  }
</style>

<body>

